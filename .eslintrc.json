{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "func-names": ["error", "never"]
  }
}
